<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Forgotten_password">


    <EditText
        android:id="@+id/field"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/inputbg"
        android:gravity="center"
        android:hint="E-Mail"
        android:textColor="#723B06"
        android:textColorHint="#723B06"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="561dp"
        android:layout_height="145dp"
        android:gravity="center"
        android:text="Ti invieremo un codice con il quale potrai aggiornare la tua password!"
        android:textColor="#753C05"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Info" />

    <TextView
        android:id="@+id/Info"
        android:layout_width="927dp"
        android:layout_height="147dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Recupero Password"
        android:textColor="#753C05"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="212dp"
        android:background="@drawable/buttonbg"
        android:text="Invia"
        android:textColor="#DDAD7F"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="110dp"
        android:layout_height="116dp"
        android:background="@android:color/transparent"
        android:contentDescription="Indietro"
        android:src="@drawable/ic_baseline_arrow_back_242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>